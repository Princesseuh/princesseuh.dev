---
  title: "Articles"
  eleventyExcludeFromCollections: true
  layout: layouts/_base.njk
  pagination:
    data: collections.post
    size: 12
    alias: posts
    reverse: true
  permalink: "articles/{% if pagination.pageNumber > 0 %}{{ pagination.pageNumber + 1 }}/{% endif %}index.html"
---

{% from 'minipost.njk' import miniPost %}

<article class="w-articleList mx-auto flex">
  <div class="w-[80%]">
    <h2>Articles</h2>
    {%- for post in posts %}
      {{ miniPost(post) }}
    {%- endfor %}
    <div>
      {%- if pagination.href.previous %}<a href="{{ pagination.href.previous }}">Newer posts</a>{% endif %}
      {%- if pagination.href.next %}<a class="float-right" href="{{ pagination.href.next }}">Older posts</a>{% endif %}
    </div>
  </div>

  <aside class="w-[20%]">
    <section>
      <h2>Tags</h2>
      <ul>
        {%- for tag in collections.tagListPosts | sort(collections.tagListPosts, true, false, collections[tag].length) -%}
          {% set tagUrl %}/articles/tags/{{ tag }}/{% endset %}
          <li>
            <a href="{{ tagUrl | url }}">
              {{Â tag }} ({{ collections[tag].length }})
            </a>
          </li>
        {%- endfor -%}
      </ul>
    </section>
    <section>
    <h2>Year</h2>

    </section>
  </aside>
</article>
