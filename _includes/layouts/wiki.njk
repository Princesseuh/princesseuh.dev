---
layout: layouts/_base.njk
---

{% macro renderNavListItem(entry) -%}
<li{% if entry.url == page.url %} class="font-bold"{% endif %}>
  {% if entry.urlÂ %}
    <a href="{{ entry.url | url }}">{{ entry.title }}</a>
  {% else %}
    <span class="text-sugar-cane font-bold">{{ entry.title }}</span>
  {% endif %}
  {%- if entry.children.length -%}
    <ul class="m-0 p-0 list-none">
      {%- for child in entry.children %}{{ renderNavListItem(child) }}{% endfor -%}
    </ul>
  {%- endif -%}
</li>
{%- endmacro %}

<section class="w-wiki my-0 mx-auto grid gap-[3%] grid-cols-wiki">
  <aside class="mt-10 transition-opacity duration-100 ease-linear">
    {% set navPages = collections.wiki | eleventyNavigation %}

    <ul class="m-0 p-0 list-none wiki-navigation">
      {%- for entry in navPages %}{{ renderNavListItem(entry) }}{%- endfor -%}
    </ul>
  </aside>

  <article class="post">
    {% from 'postHeader.njk' import postHeader with context %}
    {{ postHeader(false) }}

    {{ content | typogrify | safe }}

    <span class="text-right block text-creative-work mb-4">Page last modified <span data-date="{{ lastModified }}">{{ lastModified | readableDatetime }}</span></span>

    {% footnotes %}
  </article>

  <aside class="mt-10 transition-opacity duration-100 ease-linear">
    <span class="font-semibold mb-2">On this page</span>
    {{ content | toc | safe }}
  </aside>
</section>
