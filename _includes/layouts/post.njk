---
layout: layouts/_base.njk
---
<article>
  <header class="article--header">
    <h1 class="article--title">{{ title | safe }}</h1>
    <h2 class="article--tagline">{{ tagline | safe }}</h2>
    <div class="article--meta">
      <span class="article--date">{{ date | readableDate }}</span>
      Â·
      <span class="article--tags">
        {%- for tag in tags -%}
        {% if tag != "post" %}
          {% set tagUrl %}/articles/tags/{{ tag }}/{% endset %}
          <span class="article--tag"><a href="{{ tagUrl | url }}">{{ tag }}</a></span>{{ ', ' if not loop.last }}
        {% endif %}
        {%- endfor -%}
      </span>
    </div>
  </header>

  {{ content | typogrify | safe }}
</article>
