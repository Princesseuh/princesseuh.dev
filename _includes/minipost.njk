{% macro miniPost(post) %}
<section class="mb-3">
  <a href="{{ post.url }}">
    <h4 class="inline-block m-0 text-xl">{{ post.data.title | safe }}</h4>
  </a>

  <div class="mb-2 text-creative-work text-sm">
    {{ post.date | readableDate }}
    Â·
    {%- for tag in post.data.tags -%}
      {% if tag != "post" %}
        {% set tagUrl %}/articles/tags/{{ tag }}/{% endset %}
        <a href="{{ tagUrl | url }}">{{ tag }}</a>{{ ', ' if not loop.last }}
      {% endif %}
    {%- endfor -%}
  </div>

  {% if post.data.tagline %}
  {{ post.data.tagline | safe }}
  {% endif %}
</section>
{% endmacro %}
